<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <ImageView
            android:id="@+id/plate_imageview"
            android:layout_width="@dimen/plate_image_size"
            android:layout_height="@dimen/plate_image_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_plate" />

        <TextView
            android:id="@+id/plate_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="@dimen/plate_price_text_size"
            tools:text="Blue Plate, Â£2.99" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/plate_neg"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_gravity="center"
                android:contentDescription="@string/plus_plate"
                android:src="@drawable/ic_neg" />

            <TextView
                android:id="@+id/plate_counter"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="24sp"
                tools:text="1" />

            <ImageView
                android:id="@+id/plate_plus"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_gravity="center"
                android:contentDescription="@string/plus_plate"
                android:src="@drawable/ic_plus" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

